{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "paths": {
      "~/*": ["./app/*"]
    },
    "jsx": "react-jsx",
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "lint": {
          "validProperties": [
            "aspect-ratio",
            "elevation",
            "margin-vertical",
            "margin-horizontal",
            "padding-horizontal",
            "padding-vertical",
            "resize-mode",
            "shadow-color",
            "shadow-opacity",
            "shadow-offset",
            "shadow-radius",
            "text-align-vertical",
            "tint-color",
            "label"
          ]
        }
      }
    ]
  },
  "include": ["app"],
  "exclude": ["node_modules"]
}
